@model MecanicoModel


<nav>
    <article>
        <h1 class="display-8">Detalhes sobre o mecânico:</h1>
        <div>
            <dl>
                <dt>Nome:</dt>
                <dd>@Model.nome</dd>
                <dt>Oficina em que trabalha:</dt>
                <dd>
                    <a role="link" asp-controller="Oficina" asp-action="Show" asp-route-id="@Model.oficina.id">
                        @Model.oficina.nome
                    </a>
                </dd>
                <dt>Endereço:</dt>
                <dd>@Model.oficina.endereco - @Model.oficina.cidade, @Model.oficina.estado</dd>
                <dt>Gênero:</dt>
                <dd>@Model.sexo</dd>
                <dt>Categoria de Manutenção:</dt>
                <dd>@Model.categoriaDeManutencao</dd>
                <dt>Especialidades:</dt>
                <dd>@Model.resumo</dd>
            </dl>
        </div>
        <div>
            <a href="@Url.Action("AgendarManutencao", "Mecanico", new { mecanicoId = @Model.id })">Agendar Manutenção</a>
        </div>
    </article>
</nav>
