@model List<OficinaModel>
@{
    ViewData["Title"] = "Oficinas";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Oficina" asp-action="Create">Indicar nova Oficina </a>
    </div>

    <div>
        <h1 class="display-8">Todas as Oficinas:</h1>
    </div>
    <table class="table table-hover">
        <thead>
            <tr class="table-active">
                <th scope="col">Nome</th>
                <th scope="col">Estado</th>
                <th scope="col">Cidade</th>
                <th scope="col">Endereço</th>
            </tr>
        </thead>
        @if (Model != null && Model.Any())
        {
            foreach (OficinaModel oficina in Model)
            {
                <tbody>
                    <tr >
                        <td scope="row">
                            <a role="link" asp-controller="Oficina" asp-action="Show" asp-route-id="@oficina.id">
                                @oficina.nome
                            </a>
                        </td>
                        <td>@oficina.estado</td>
                        <td>@oficina.cidade</td>
                        <td>@oficina.endereco</td>
                    </tr>
                </tbody>
            }
        }
        else
        {
            <h1>Não existem oficinas cadastradas na plataforma</h1>
        }
    </table>


</div>